<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chess_android_app">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Chessandroidapp">
        <activity
            android:name=".ChessReplay"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".ChessPlay"
            android:label="@string/app_name" />
        <activity android:name=".popups.PlayWhitePromotionPopup"/>
        <activity android:name=".popups.PlayBlackPromotionPopup"/>
        <activity android:name=".popups.PlayGameOverPopup"/>
        <activity android:name=".popups.GameOverTitlePopup"/>
        <activity android:name=".ChessMain">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>